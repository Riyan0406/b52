<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>add project</title>

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
      integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg bg-secondary">
      <div class="container">
        <a class="navbar-brand" href="#">
          <img
            class=""
            src="/image/slack_3800024-removebg-preview.png"
            alt=""
            style="width: 50px"
          />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a
                class="nav-link active text-light fw-bold"
                aria-current="page"
                href="/"
              >Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-light fw-bold" href="/add-project">Add
                Project</a>
            </li>

            <li class="nav-item">
              <a class="nav-link text-light fw-bold" href="/testimonial">My
                Testimonial</a>
            </li>
          </ul>
        </div>
        <a href="/Contact"><button
            type="button"
            class="btn btn-secondary"
          >Contact Me</button></a>

      </div>
    </nav>

    <form
      method="post"
      action="/update"
      style=" background-color: #9DBC98 ;;"
      class="p-1 mx-auto mb-0"
    >
      <h3 class="text-light d-flex justify-content-center mt-3">Edit My Project</h3>
      <input type="hidden" name="id" value="{{dataDummy.id}}"/>
      <div style="width: 50%;" class="vanila mx-auto">
        <div class="mb-3">
          <label for="title" class="text-light">Title</label>
          <input
            type="text"
            class="form-control bg-body-secondary"
            name="title"
            id="title"
            value="{{dataDummy.title }}"
          />
        </div>
        <div class="mb-3 d-flex">
          <div class="w-50 p-1">
            <label for="start-date" class="form-label text-light">Start Date</label>
            <input
              type="date"
              class="form-control bg-body-secondary"
              name="startDate"
              id="start-date"
              value="{{dataDummy.startDate}}"
            />
          </div>
          <div class="w-50 p-1">
            <label for="end-date" class="form-label text-light">End Date</label>
            <input
              type="date"
              class="form-control bg-body-secondary"
              name="endDate"
              id="end-date"
              value="{{dataDummy.endDate}}"
            />
          </div>
        </div>
        <div class="mb-3">
          <label
            for="Description"
            class="form-label text-light"
          >Description</label>
          <textarea
            class="form-control bg-body-secondary"
            name="Description"
            id="Description"
            style="resize: none; height: 100px"
            
          >{{dataDummy.Description}}</textarea>
        </div>
        <div class="">
          <label class="text-light" for="Technologies ">Tecnhologies</label>
          <div>
            <input
              class="bg-body-secondary"
              type="checkbox"
              name="Tecnhologies"
              value="node-js"
              id="node"
              {{#if (arrayIncludes dataDummy.Tecnhologies 'node-js')}}checked{{/if}}
              
            />
            <label class="text-light" for="node">Node Js</label>
            <input
              class="ms-3 bg-body-secondary"
              type="checkbox"
              name="Tecnhologies"
              value="golang"
              id="golang"
              {{#if (arrayIncludes dataDummy.Tecnhologies 'golang')}}checked{{/if}}
            />
            <label class="text-light" for="golang">Golang</label>
          </div>
          <div>
            <input
              class="bg-body-secondary"
              type="checkbox"
              name="Tecnhologies"
              value="react"
              id="react"
              {{#if (arrayIncludes dataDummy.Tecnhologies 'react')}}checked{{/if}}
            />
            <label class="text-light" for="react">React Js</label>
            <input
              class="ms-3 bg-body-secondary"
              type="checkbox"
              name="Tecnhologies"
              value="Java"
              id="java"
              {{#if (arrayIncludes dataDummy.Tecnhologies 'java')}}checked{{/if}}
            />
            <label class="text-light" for="java">Java</label>
          </div>
        </div>
        <div class="mb-3">
          <label for="image" class="form-label text-light mt-2">Upload Image</label>
          <input
            class="form-control form-control-sm bg-body-secondary"
            id="image"
            type="file"
          />
        </div>
        <div class="mt-3 text-end">
          <button
            type="submit"
            class="btn btn-outline-success py-1 text-dark fw-bold mb-5"
            style="background-color: #f9bc60"
          >
            Edit Post Project
          </button>
        </div>
      </div>
    </form>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>

  </body>
</html>